@page
@model WebAppProdotti.Pages.ProdottiModel
@{
    ViewData["Title"] = "Prodotti";
}

<h1>@ViewData["Title"]</h1>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Prezzo</th>
                <th>Immagine</th>
                <th>Link</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prodotto in Model.ElencoProdotti)
            {
                <tr>
                    <td>@prodotto.Id</td>
                    <td>@prodotto.Nome</td>
                    <td>@prodotto.Prezzo</td>
                    <td>
                        <img src="@prodotto.Immagine" alt="Immagine di @prodotto.Nome"/>
                    </td>
                    <td><a asp-page="DettaglioProdotto" asp-route-id="@prodotto.Id" asp-route-nome="@prodotto.Nome" asp-route-prezzo="@prodotto.Prezzo" asp-route-dettaglio="@prodotto.Dettaglio" asp-route-immagine="@prodotto.Immagine">Dettaglio</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
